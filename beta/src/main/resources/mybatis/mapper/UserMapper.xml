<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.industrialplatform.beta.mapper.UserMapper">

    <select id="queryUserList" resultType="User">
    select * from user
   </select>
    <select id="queryUserById" resultType="User">
        select * from user where id=#{id}
    </select>
    <insert id="addUser" parameterType="User">
        insert into user(username,userpassword) values(#{username},#{userpassword})
    </insert>
    <update id="updateUser" parameterType="User">
        update user set username=#{username},userpassword=#{userpassword} where id=#{id}
    </update>
    <delete id="deleteUser" parameterType="int">
        delete from user where id=#{id}
    </delete>
</mapper>